{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "jsx": "react-native",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "paths": {
      "@/*": ["./*"],
      "app/*": ["./*"]
    },
    "baseUrl": "."
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
